<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quora Posts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="page">
    <h1 class="title">Quora Posts</h1>

    <a href="/posts/new" class="btn primary">+ Create Post</a>

    <% for(let post of posts){ %>
        <div class="post-card">
            <h3 class="user">@<%= post.username %></h3>
            <p class="content"><%= post.content %></p>

            <div class="actions">
                <a href="/posts/<%= post.id %>" class="link">View</a>
                <a href="/posts/<%= post.id %>/edit" class="link edit">Edit</a>

                <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
                    <button class="btn danger">Delete</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

</body>
</html>
